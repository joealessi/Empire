<Window x:Class="EmpireGame.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a1a"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Border Grid.Row="0" Background="#2a2a2a" Padding="20">
            <StackPanel>
                <TextBlock x:Name="GameOverTitle" 
                          Text="DEFEAT"
                          FontSize="48" 
                          FontWeight="Bold"
                          Foreground="Red"
                          HorizontalAlignment="Center"/>
                <TextBlock x:Name="GameOverSubtitle" 
                          Text="Your empire has fallen"
                          FontSize="18"
                          Foreground="Gray"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Statistics -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20,30,20">
                <!-- Rank -->
                <Border Background="#2a2a2a" Padding="15" Margin="0,0,0,20" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="FINAL RANK" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="Gold"
                                  HorizontalAlignment="Center"/>
                        <TextBlock x:Name="RankText" 
                                  Text="Captain"
                                  FontSize="32" 
                                  FontWeight="Bold"
                                  Foreground="Gold"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Score -->
                <Border Background="#2a2a2a" Padding="15" Margin="0,0,0,20" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="FINAL SCORE" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="LimeGreen"
                                  HorizontalAlignment="Center"/>
                        <TextBlock x:Name="ScoreText" 
                                  Text="1,250"
                                  FontSize="36" 
                                  FontWeight="Bold"
                                  Foreground="LimeGreen"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Statistics Grid -->
                <Border Background="#2a2a2a" Padding="20" CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Text="CAMPAIGN STATISTICS" Grid.Row="0" Grid.ColumnSpan="3"
                                  FontSize="14" FontWeight="Bold" Foreground="Cyan"
                                  HorizontalAlignment="Center" Margin="0,0,0,10"/>

                        <!-- Survival -->
                        <TextBlock Text="Turns Survived:" Grid.Row="2" Grid.Column="0" Foreground="White" FontSize="14"/>
                        <TextBlock x:Name="TurnsSurvivedText" Grid.Row="2" Grid.Column="1" Foreground="White" FontSize="14" Margin="20,0,10,0"/>
                        <TextBlock x:Name="TurnsSurvivedPoints" Grid.Row="2" Grid.Column="2" Foreground="LimeGreen" FontSize="14" FontWeight="Bold"/>

                        <!-- Combat -->
                        <TextBlock Text="Enemy Units Destroyed:" Grid.Row="3" Grid.Column="0" Foreground="White" FontSize="14" Margin="0,5,0,0"/>
                        <TextBlock x:Name="EnemyUnitsText" Grid.Row="3" Grid.Column="1" Foreground="White" FontSize="14" Margin="20,5,10,0"/>
                        <TextBlock x:Name="EnemyUnitsPoints" Grid.Row="3" Grid.Column="2" Foreground="LimeGreen" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>

                        <TextBlock Text="Units Lost:" Grid.Row="4" Grid.Column="0" Foreground="White" FontSize="14" Margin="0,5,0,0"/>
                        <TextBlock x:Name="UnitsLostText" Grid.Row="4" Grid.Column="1" Foreground="White" FontSize="14" Margin="20,5,10,0"/>
                        <TextBlock x:Name="UnitsLostPoints" Grid.Row="4" Grid.Column="2" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>

                        <!-- Structures -->
                        <TextBlock Text="Maximum Bases Owned:" Grid.Row="6" Grid.Column="0" Foreground="White" FontSize="14" Margin="0,5,0,0"/>
                        <TextBlock x:Name="MaxBasesText" Grid.Row="6" Grid.Column="1" Foreground="White" FontSize="14" Margin="20,5,10,0"/>
                        <TextBlock x:Name="MaxBasesPoints" Grid.Row="6" Grid.Column="2" Foreground="LimeGreen" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>

                        <TextBlock Text="Maximum Cities Owned:" Grid.Row="7" Grid.Column="0" Foreground="White" FontSize="14" Margin="0,5,0,0"/>
                        <TextBlock x:Name="MaxCitiesText" Grid.Row="7" Grid.Column="1" Foreground="White" FontSize="14" Margin="20,5,10,0"/>
                        <TextBlock x:Name="MaxCitiesPoints" Grid.Row="7" Grid.Column="2" Foreground="LimeGreen" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>

                        <TextBlock Text="Structures Captured:" Grid.Row="8" Grid.Column="0" Foreground="White" FontSize="14" Margin="0,5,0,0"/>
                        <TextBlock x:Name="StructuresCapturedText" Grid.Row="8" Grid.Column="1" Foreground="White" FontSize="14" Margin="20,5,10,0"/>
                        <TextBlock x:Name="StructuresCapturedPoints" Grid.Row="8" Grid.Column="2" Foreground="LimeGreen" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>

                        <TextBlock Text="Structures Lost:" Grid.Row="9" Grid.Column="0" Foreground="White" FontSize="14" Margin="0,5,0,0"/>
                        <TextBlock x:Name="StructuresLostText" Grid.Row="9" Grid.Column="1" Foreground="White" FontSize="14" Margin="20,5,10,0"/>
                        <TextBlock x:Name="StructuresLostPoints" Grid.Row="9" Grid.Column="2" Foreground="Red" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>

                        <!-- Score Breakdown -->
                        <Rectangle Grid.Row="11" Grid.ColumnSpan="3" Height="2" Fill="Gray" Margin="0,10"/>

                        <TextBlock Text="Survival Bonus:" Grid.Row="12" Grid.Column="0" Foreground="Cyan" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock x:Name="SurvivalBonus" Grid.Row="12" Grid.Column="2" Foreground="Cyan" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>

                        <TextBlock Text="Combat Bonus:" Grid.Row="13" Grid.Column="0" Foreground="Cyan" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock x:Name="CombatBonus" Grid.Row="13" Grid.Column="2" Foreground="Cyan" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>

                        <TextBlock Text="Structure Bonus:" Grid.Row="14" Grid.Column="0" Foreground="Cyan" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>
                        <TextBlock x:Name="StructureBonus" Grid.Row="14" Grid.Column="2" Foreground="Cyan" FontSize="14" FontWeight="Bold" Margin="0,5,0,0"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Content="Main Menu" 
                    Width="150" 
                    Height="40"
                    FontSize="16"
                    Click="MainMenuButton_Click"
                    Margin="10"/>
            <Button Content="Exit Game" 
                    Width="150" 
                    Height="40"
                    FontSize="16"
                    Click="ExitButton_Click"
                    Margin="10"/>
        </StackPanel>
    </Grid>
</Window>