<Window x:Class="EmpireGame.StartGameForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Empire - New Game Setup"
        Width="500"
        Height="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1a1a2e">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="NEW GAME SETUP"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#00d4ff"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Options Panel -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Commander Name -->
                <TextBlock Text="Commander Name:"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="CommanderNameTextBox"
                         Text="Commander"
                         FontSize="14"
                         Padding="5"
                         Margin="0,0,0,20"/>

                <!-- Map Type -->
                <TextBlock Text="Map Type:"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="MapTypeCombo"
                          FontSize="14"
                          Padding="5"
                          Margin="0,0,0,20"
                          SelectedIndex="1">
                    <ComboBoxItem Content="Continents (Balanced)"/>
                    <ComboBoxItem Content="Pangea (One Supercontinent)"/>
                    <ComboBoxItem Content="Islands (Many Small)"/>
                    <ComboBoxItem Content="Archipelago (Island Chain)"/>
                    <ComboBoxItem Content="Peninsula and Islands"/>
                </ComboBox>

                <!-- Map Size -->
                <TextBlock Text="Map Size:"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="MapSizeCombo"
                          FontSize="14"
                          Padding="5"
                          Margin="0,0,0,20"
                          SelectedIndex="2">
                    <ComboBoxItem Content="Small (50x50)" Tag="50"/>
                    <ComboBoxItem Content="Medium (75x75)" Tag="75"/>
                    <ComboBoxItem Content="Large (100x100)" Tag="100"/>
                    <ComboBoxItem Content="Huge (150x150)" Tag="150"/>
                </ComboBox>

                <!-- Number of Opponents -->
                <TextBlock Text="AI Opponents:"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="OpponentsCombo" SelectedIndex="3" SelectionChanged="OpponentsCombo_SelectionChanged">
                    <ComboBoxItem>1 Opponent</ComboBoxItem>
                    <ComboBoxItem>2 Opponents</ComboBoxItem>
                    <ComboBoxItem>3 Opponents</ComboBoxItem>
                    <ComboBoxItem>4 Opponents</ComboBoxItem>
                    <ComboBoxItem>5 Opponents</ComboBoxItem>
                    <ComboBoxItem>6 Opponents</ComboBoxItem>
                    <ComboBoxItem>7 Opponents</ComboBoxItem>
                </ComboBox>

                <!-- AI Personalities Section -->
                <TextBlock Text="AI Opponents:" FontSize="16" FontWeight="Bold" Margin="0,15,0,5"/>

                <StackPanel x:Name="AIPersonalitiesPanel">
                    <!-- AI 1 -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Opponent 1:" VerticalAlignment="Center" Grid.Column="0"/>
                        <ComboBox x:Name="AI1PersonalityCombo" Grid.Column="1" Margin="5,0,0,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>

                    <!-- AI 2 -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Opponent 2:" VerticalAlignment="Center" Grid.Column="0"/>
                        <ComboBox x:Name="AI2PersonalityCombo" Grid.Column="1" Margin="5,0,0,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>

                    <!-- AI 3 -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Opponent 3:" VerticalAlignment="Center" Grid.Column="0"/>
                        <ComboBox x:Name="AI3PersonalityCombo" Grid.Column="1" Margin="5,0,0,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>

                    <!-- AI 4 -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Opponent 4:" VerticalAlignment="Center" Grid.Column="0"/>
                        <ComboBox x:Name="AI4PersonalityCombo" Grid.Column="1" Margin="5,0,0,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>

                    <!-- AI 5 -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Opponent 5:" VerticalAlignment="Center" Grid.Column="0"/>
                        <ComboBox x:Name="AI5PersonalityCombo" Grid.Column="1" Margin="5,0,0,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>

                    <!-- AI 6 -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Opponent 6:" VerticalAlignment="Center" Grid.Column="0"/>
                        <ComboBox x:Name="AI6PersonalityCombo" Grid.Column="1" Margin="5,0,0,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>

                    <!-- AI 7 -->
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Opponent 7:" VerticalAlignment="Center" Grid.Column="0"/>
                        <ComboBox x:Name="AI7PersonalityCombo" Grid.Column="1" Margin="5,0,0,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                </StackPanel>

                <!-- Difficulty -->
                <TextBlock Text="Difficulty:"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="DifficultyCombo"
                          FontSize="14"
                          Padding="5"
                          Margin="0,0,0,20"
                          SelectedIndex="1">
                    <ComboBoxItem Content="Easy"/>
                    <ComboBoxItem Content="Normal"/>
                    <ComboBoxItem Content="Hard"/>
                </ComboBox>

                <!-- Resource Abundance -->
                <TextBlock Text="Resource Abundance:"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="ResourcesCombo"
                          FontSize="14"
                          Padding="5"
                          Margin="0,0,0,20"
                          SelectedIndex="1">
                    <ComboBoxItem Content="Scarce"/>
                    <ComboBoxItem Content="Normal"/>
                    <ComboBoxItem Content="Abundant"/>
                </ComboBox>

                <!-- Starting Resources -->
                <TextBlock Text="Starting Resources:"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="💰 Gold:"
                               Foreground="White"
                               FontSize="12"
                               Width="80"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="StartingGoldTextBox"
                             Text="10"
                             Width="60"
                             FontSize="12"
                             Padding="3"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="⚙️ Steel:"
                               Foreground="White"
                               FontSize="12"
                               Width="80"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="StartingSteelTextBox"
                             Text="0"
                             Width="60"
                             FontSize="12"
                             Padding="3"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="🛢️ Oil:"
                               Foreground="White"
                               FontSize="12"
                               Width="80"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="StartingOilTextBox"
                             Text="1"
                             Width="60"
                             FontSize="12"
                             Padding="3"/>
                </StackPanel>

                <!-- Initial Tile Size -->
                <TextBlock Text="Initial Zoom Level:"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="TileSizeCombo"
                          FontSize="14"
                          Padding="5"
                          Margin="0,0,0,20"
                          SelectedIndex="1">
                    <ComboBoxItem Content="16x16 (Zoomed Out)" Tag="16"/>
                    <ComboBoxItem Content="24x24 (Small)" Tag="24"/>
                    <ComboBoxItem Content="32x32 (Medium)" Tag="32"/>
                    <ComboBoxItem Content="48x48 (Large)" Tag="48"/>
                    <ComboBoxItem Content="64x64 (Zoomed In)" Tag="64"/>
                </ComboBox>

                <!-- Animation Speed -->
                <TextBlock Text="Animation Speed:"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="AnimationSpeedCombo"
                          FontSize="14"
                          Padding="5"
                          Margin="0,0,0,5"
                          SelectedIndex="1">
                    <ComboBoxItem Content="Very Fast (250ms)" Tag="250"/>
                    <ComboBoxItem Content="Fast (500ms)" Tag="500"/>
                    <ComboBoxItem Content="Normal (1000ms)" Tag="1000"/>
                    <ComboBoxItem Content="Slow (1500ms)" Tag="1500"/>
                    <ComboBoxItem Content="Very Slow (2000ms)" Tag="2000"/>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button x:Name="StartButton"
                    Content="START GAME"
                    Width="150"
                    Height="40"
                    FontSize="16"
                    FontWeight="Bold"
                    Margin="0,0,10,0"
                    Click="StartButton_Click"
                    Background="#00d4ff"
                    Foreground="Black"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button x:Name="CancelButton"
                    Content="CANCEL"
                    Width="150"
                    Height="40"
                    FontSize="16"
                    FontWeight="Bold"
                    Click="CancelButton_Click"
                    Background="#444"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>